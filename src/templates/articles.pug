mixin article-item(item)
	.article-item
		.article-item__top
			img(src=item.srcPhoto, alt=item.title)
		.article-item__bottom
			p.article-item__title!= item.title
			p.article-item__desc!= item.desc
			a.article-item__link(href=item.link)
				span Read more
				i.fico.fico-arrow

